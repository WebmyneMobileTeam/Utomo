<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_booking_centerdetails" />

            <include layout="@layout/item_my_car" />

            <include layout="@layout/item_schedule" />

            <include layout="@layout/item_service_type" />

            <include layout="@layout/item_pick_up_address" />

            <include layout="@layout/item_booking_description" />

            <Button
                android:id="@+id/btnBook"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/booking_card_margin"
                android:text="Book" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>