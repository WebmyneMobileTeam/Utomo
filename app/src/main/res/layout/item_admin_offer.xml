<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/booking_card_margin"
    android:layout_marginRight="@dimen/booking_card_margin"
    android:layout_marginTop="@dimen/booking_card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal">

                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="50dp"
                    android:layout_height="50sp"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/txtOfferTitle"
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Car"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtOfferDesc"
                style="@style/BodyTextStyle4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:" />

            <TextView
                android:id="@+id/txtOfferValidTo"
                style="@style/BodyTextStyle4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valid Upto:" />


        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/VS_TEXT"
            app:cardCornerRadius="@dimen/VVS_TEXT"
            android:layout_weight="1">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txtOfferTitleCode"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="My Car"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/M_TEXT" />

                <TextView
                    android:id="@+id/txtUseOffer"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Copy OfferCode"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/S_TEXT"

                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v7.widget.CardView>