<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/booking_card_margin"
    android:layout_marginRight="@dimen/booking_card_margin"
    android:layout_marginTop="@dimen/booking_card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                >

                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="50dp"
                    android:layout_height="50sp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/car" />

                <TextView
                    android:id="@+id/txtOfferTitle"
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Car"
                    android:layout_toRightOf="@+id/img"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/txtOfferTitleCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text="AADXJ23"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/M_TEXT" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtOfferDesc"
                style="@style/BodyTextStyle4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:" />


            <TextView
                android:id="@+id/txtOfferValidTo"
                style="@style/BodyTextStyle4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Valid Upto:" />

        </LinearLayout>




            <!-- <TextView
                 android:id="@+id/txtUseOffer"
                 style="@style/BodyTextStyle4dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_weight="1"
                 android:gravity="center"
                 android:text="Copy OfferCode"
                 android:textColor="@color/colorPrimaryDark"
                 android:textSize="@dimen/S_TEXT"

                 />-->


    </LinearLayout>


</android.support.v7.widget.CardView>