<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/booking_card_margin"
    android:layout_marginRight="@dimen/booking_card_margin"
    android:layout_marginTop="@dimen/booking_card_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_action_circle"
                android:tint="@color/md_green_700" />

            <TextView
                android:id="@+id/txtOfferTitle1"
                style="@style/BodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Offer"
                android:layout_alignBottom="@+id/txtOfferTitleCode"
                android:layout_toRightOf="@+id/img"
                android:layout_toEndOf="@+id/img" />

            <TextView
                style="@style/BodyTextStyle"
                android:id="@+id/txtOfferTitleCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="AADXJ23" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtOfferDiscount"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/XXL_TEXT"
            android:text="UPTO RS 500 OFF " />

        <TextView
            android:id="@+id/txtOfferTitle"
            style="@style/BodyTextStyle"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:" />


        <TextView
            android:id="@+id/txtOfferValidTo"
            style="@style/BodyTextStyle"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Valid Upto:" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_info"
        android:layout_gravity="bottom|right"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:tint="@color/primary_dark" />
    <!-- <TextView
         android:id="@+id/txtUseOffer"
         style="@style/BodyTextStyle4dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent"

         android:layout_weight="1"
         android:gravity="center"
         android:text="Copy OfferCode"
         android:textColor="@color/colorPrimaryDark"
         android:textSize="@dimen/S_TEXT"

         />-->


</android.support.v7.widget.CardView>