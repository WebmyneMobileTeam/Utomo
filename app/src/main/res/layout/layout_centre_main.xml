<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCentreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maruti Service Centre"
                    android:textSize="@dimen/L_TEXT"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:numStars="5"
                    android:rating="2.5"
                    android:stepSize="0.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCentreAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy2" />

            <TextView
                android:id="@+id/txtCentreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStartPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="From Rs.200"
                    android:textSize="@dimen/L_TEXT"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBook"
                    style="@style/MyButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book Now" />

            </LinearLayout>

            <com.rovertech.utomo.app.widget.FlowLayout
                android:id="@+id/serviceFlowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="start|top">

            </com.rovertech.utomo.app.widget.FlowLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>
