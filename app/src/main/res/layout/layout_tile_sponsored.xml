<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/slider2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A6000000" />

            <com.rovertech.utomo.app.widget.labelView.LabelImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:label_backgroundColor="@color/yellow"
                app:label_orientation="RIGHT_TOP"
                app:label_text="Sponsored"
                app:label_textColor="@color/black"
                app:label_textSize="@dimen/S_TEXT"
                app:label_typeface="custombold.otf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/M_TEXT"
                    android:padding="4dp"
                    android:text="Service Center Name"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/N_TEXT"
                    android:padding="2dp"
                    android:text="@string/dummy1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/N_TEXT"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/dummy4"
                    android:textColor="@color/white" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>