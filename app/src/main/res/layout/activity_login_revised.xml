<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".account.LoginActivity">

    <include layout="@layout/app_bar2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtTc"
        android:layout_below="@+id/toolbarLayout"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/socialBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loginBar"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFb"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_fb"
                android:padding="@dimen/social_icon_padding"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_google"
                android:padding="@dimen/social_icon_padding"
                android:src="@drawable/ic_google_plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Or"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ScrollView
            android:id="@+id/normalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.rovertech.utomo.app.widget.IconEditText
                    android:id="@+id/edtMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    widget:hint="Mobile Number"
                    widget:iconSrc="@drawable/ic_phone"
                    widget:maxLength="10"
                    widget:inputType="number" />

                <com.rovertech.utomo.app.widget.IconEditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    widget:hint="Enter Name"
                    widget:iconSrc="@drawable/ic_account"
                    widget:inputType="text" />

                <com.rovertech.utomo.app.widget.IconEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    widget:hint="Email (optional)"
                    widget:iconSrc="@drawable/ic_email"
                    widget:inputType="textEmailAddress" />

                <LinearLayout
                    android:id="@+id/cityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.1"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_map" />

                    <AutoCompleteTextView
                        android:id="@+id/edtCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.9"
                        android:hint="City"
                        android:paddingLeft="12dp"
                        android:singleLine="true" />

                </LinearLayout>

                <com.rovertech.utomo.app.widget.IconEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    widget:hint="Password"
                    widget:iconSrc="@drawable/ic_password"
                    widget:inputType="password" />

                <TextView
                    android:id="@+id/btnLogin"
                    style="@style/MyButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:text="Login" />

                <TextView
                    android:id="@+id/txtForget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Forget Password?"
                    android:textSize="@dimen/N_TEXT" />

                <TextView
                    android:id="@+id/txtSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="New User? Sign Up"
                    android:textSize="@dimen/N_TEXT" />

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Already User? Login"
                    android:textSize="@dimen/N_TEXT" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Terms &amp; Condition"
        android:textSize="@dimen/N_TEXT" />

</RelativeLayout>