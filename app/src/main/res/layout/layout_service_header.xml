<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imgServiceCentre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slider1"
            android:tint="#bc000000" />

        <TextView
            android:id="@+id/txtCentreName"
            style="@style/MyTextStyleLabel"
            android:layout_centerInParent="true"
            android:text="Maruti Service Centre"
            android:textSize="@dimen/XL_TEXT"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtRating"
            style="@style/MyTextStyleLabel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/review_border_new"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="4.5 / 5"
            android:textColor="@color/white"
            android:textSize="@dimen/VS_TEXT" />

        <TextView
            android:id="@+id/txtReviews"
            style="@style/MyTextStyleLabel"
            android:layout_above="@+id/txtRating"
            android:layout_marginLeft="8dp"
            android:text="1 Reviews" />

    </RelativeLayout>
</LinearLayout>