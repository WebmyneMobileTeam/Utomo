<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:padding="1dp"
                    android:text="Audi A3"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/L_TEXT" />

                <TextView
                    android:id="@+id/txtVehicleNo"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:padding="1dp"
                    android:text="(GJ 4 ff 8988)"
                    android:textAllCaps="true"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/N_TEXT" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtOdometerValue"
                style="@style/BodyTextStyle4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Gear box: 7 Speed"
                android:textColor="@color/white"
                android:textSize="@dimen/M_TEXT" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/car" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="#bdffffff"
                android:orientation="horizontal"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/txtEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit"

                    android:tint="?android:textColorSecondary" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"

                    android:text="Edit" />

                <ImageView
                    android:id="@+id/txtDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_delete_black_24dp"
                    android:text="Delete this car"
                    android:tint="?android:textColorSecondary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:text="Delete" />

            </LinearLayout>

        </FrameLayout>


        <!-- </RelativeLayout>-->
    </LinearLayout>

</android.support.v7.widget.CardView>