<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Audi A3"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/XL_TEXT" />

                <TextView
                    android:id="@+id/txtVehicleNo"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="(GJ 4 ff 8988)"
                    android:textAllCaps="true"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/M_TEXT" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                app:cardCornerRadius="1sp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/txtOdometerValue"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:text="Gear box: 7 Speed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/M_TEXT" />
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgCar"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:scaleType="fitCenter"
            android:src="@drawable/car" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_gravity="right"
            android:weightSum="4">



            <ImageView
                android:id="@+id/txtEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit"

                android:tint="?android:textColorSecondary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginRight="8sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/txtDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="Delete this car"
                android:layout_gravity="center"
                android:tint="?android:textColorSecondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginRight="8sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>


        <!-- </RelativeLayout>-->
    </LinearLayout>

</android.support.v7.widget.CardView>