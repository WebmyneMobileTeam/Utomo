<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/car" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shadow" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Audi A3"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/M_TEXT" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:text="Vehicle No"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/S_TEXT" />

                <TextView
                    android:id="@+id/txtVehicleNo"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="GJ 4 ff 8988"
                    android:textAllCaps="true"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/M_TEXT" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="2dp"
                    android:text="Odometer Reading"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/S_TEXT" />

                <TextView
                    android:id="@+id/txtOdometerValue"
                    style="@style/BodyTextStyle4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="1dp"
                    android:text="Gear box: 7 Speed"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="@dimen/M_TEXT" />


            </LinearLayout>

            <ImageView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp"
                android:src="@drawable/ic_edit"
                android:text="Delete this car"
                android:tint="?android:textColorSecondary" />

            <ImageView
                android:id="@+id/txtDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="Delete this car"
                android:tint="?android:textColorSecondary" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>