<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/car" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A6000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottomBar"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtCarName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imgService"
                            android:padding="4dp"
                            android:text="Audi A3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/M_TEXT" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtAcceleration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Acceleration (0-100 kmph): 3.2 sec"
                        android:textColor="@color/white"
                        android:textSize="@dimen/N_TEXT" />

                    <TextView
                        android:id="@+id/txtGear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Gear box: 7 Speed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/N_TEXT" />

                    <TextView
                        android:id="@+id/txtFuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Fuel Tank Capacity (Liters): 73"
                        android:textColor="@color/white"
                        android:textSize="@dimen/N_TEXT" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bottomBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"

                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtServiceStatus"
                        style="@style/MyTileTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:gravity="right"
                        android:text="Pickup Done"
                        android:textSize="@dimen/N_TEXT" />

                </RelativeLayout>

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>