<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rovertech.utomo.app.wallet.WalletFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/amountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtWalletRsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Wallet Balance"
            android:textColor="@color/white"
            android:textSize="@dimen/L_TEXT"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wallet_big"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/txtWalletRs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="RS 1000"
            android:textColor="@color/white"
            android:textSize="@dimen/XXL_TEXT" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtInvite"
        android:layout_below="@+id/amountLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/action_white_circle" />

                <TextView
                    android:id="@+id/txt1"
                    style="@style/MyAboutTextStyle"
                    android:text="@string/dummy1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/action_white_circle" />

                <TextView
                    android:id="@+id/txt2"
                    style="@style/MyAboutTextStyle"
                    android:text="@string/dummy2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/action_white_circle" />

                <TextView
                    android:id="@+id/txt3"
                    style="@style/MyAboutTextStyle"
                    android:text="@string/dummy3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/action_white_circle" />

                <TextView
                    android:id="@+id/txt4"
                    style="@style/MyAboutTextStyle"
                    android:text="@string/dummy4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/action_white_circle" />

                <TextView
                    android:id="@+id/txt5"
                    style="@style/MyAboutTextStyle"
                    android:text="@string/dummy5" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/txtInvite"
        style="@style/MyButtonStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center"
        android:text="@string/inviteEarn" />

</RelativeLayout>