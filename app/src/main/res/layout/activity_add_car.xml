<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rovertech.utomo.app.addCar.AddCarActivity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/imageSelectLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/off_white">

                <ImageView
                    android:id="@+id/imageCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_small_camera" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtVehicleNo"
                    style="@style/MyEditTextStyle"
                    android:digits="@string/digits"
                    android:drawableLeft="@drawable/ic_account"
                    android:hint="Vehicle No"
                    android:inputType="textCapCharacters|textNoSuggestions|"
                    android:singleLine="true"
                    android:textAllCaps="true" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/makeCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:src="@drawable/ic_account" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/makeSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:layout_marginRight="@dimen/edittext_padding"
                        android:layout_weight="1"
                        android:entries="@array/spinner_loading_array"
                        android:overlapAnchor="false" />

                    <ProgressBar
                        android:id="@+id/makeProgressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/yearCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:src="@drawable/ic_account" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/yearSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:layout_marginRight="@dimen/edittext_padding"
                        android:layout_weight="1"
                        android:entries="@array/spinner_loading_array"
                        android:overlapAnchor="false" />

                    <ProgressBar
                        android:id="@+id/yearProgressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/modelCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:src="@drawable/ic_account" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/modelSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:layout_marginRight="@dimen/edittext_padding"
                        android:layout_weight="1"
                        android:entries="@array/spinner_loading_array"
                        android:overlapAnchor="false" />

                    <ProgressBar
                        android:id="@+id/modelProgressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtServiceDate"
                    style="@style/MyEditTextStyle"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_account"
                    android:focusable="false"
                    android:hint="Add service Date"
                    android:longClickable="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtPUC"
                    style="@style/MyEditTextStyle"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_account"
                    android:focusable="false"
                    android:hint="PUC Date"
                    android:longClickable="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtInsuranceDate"
                    style="@style/MyEditTextStyle"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_account"
                    android:focusable="false"
                    android:hint="Insurance Date"
                    android:longClickable="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/edtKms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Odometer Reading" />

                    <com.rovertech.utomo.app.widget.Odometer
                        android:id="@+id/odometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        custom:slots="6" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnAdd"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:text="Add Car" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
