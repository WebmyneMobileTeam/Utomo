<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/half_black</item>
        <item name="material_drawer_primary_text">@color/half_black</item>
        <item name="material_drawer_selected_text">@color/purple</item>
        <item name="material_drawer_primary_icon">@color/half_black</item>
    </style>

    <style name="MyTextStyle" parent="android:Widget.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/TextTitle</item>
    </style>

    <style name="BodyTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/TextBody</item>
    </style>

    <style name="BodyTextStyle4dp" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/TextBody</item>
    </style>

    <style name="MyBookingText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/addColor</item>
    </style>

    <style name="MyAboutTextStyle" parent="android:Widget.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/M_TEXT</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">@dimen/EDIT_TEXT_SIZE</item>
    </style>

    <style name="MyTextStyleLabel" parent="android:Widget.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MyButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/selectable_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/S_TEXT</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>

    </style>

    <style name="SimpleButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/selectable_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/S_TEXT</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="myToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/theme_purple_accent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <!--<item name="tabSelectedTextColor">@color/gplus</item>-->
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTileTextStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/N_TEXT</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ExpandedAppBarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/collapsing_textsize</item>
    </style>

    <style name="CollapsedAppBarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/toolbar_textsize</item>
    </style>


    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="type">small</item>
    </style>

    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="type">small</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/toolbar_textsize</item>
        <item name="android:textColor">@color/purple</item>
    </style>
</resources>
