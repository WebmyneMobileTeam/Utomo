<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--PagerTabStrip-->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsDividerWidth" format="dimension" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsPaddingMiddle" format="boolean" />
        <attr name="pstsTextStyle">
            <flag name="normal" value="0x0" />
            <flag name="bold" value="0x1" />
            <flag name="italic" value="0x2" />
        </attr>
        <attr name="pstsTextSelectedStyle">
            <flag name="normal" value="0x0" />
            <flag name="bold" value="0x1" />
            <flag name="italic" value="0x2" />
        </attr>
        <attr name="pstsTextAlpha" format="float" />
        <attr name="pstsTextSelectedAlpha" format="float" />
    </declare-styleable>

    <!--Odometer-->
    <declare-styleable name="Options">
        <attr name="slots" format="integer" />
    </declare-styleable>

    <!--Progress Layout-->
    <declare-styleable name="progressLayout">
        <attr name="emptyColor" format="color" />
        <attr name="loadedColor" format="color" />
        <attr name="maxProgress" format="integer" />
        <attr name="autoProgress" format="boolean" />
        <attr name="currentProgress" format="integer" />
    </declare-styleable>

    <!-- Label View-->
    <declare-styleable name="LabelView">
        <attr name="label_distance" format="dimension" />
        <attr name="label_height" format="dimension" />
        <attr name="label_backgroundColor" format="color" />
        <attr name="label_text" format="string" />
        <attr name="label_textSize" format="dimension" />
        <attr name="label_textColor" format="color" />
        <attr name="label_typeface" format="string" />

        <attr name="label_visual" format="boolean" />
        <attr name="label_orientation" format="enum">
            <enum name="LEFT_TOP" value="1" />
            <enum name="RIGHT_TOP" value="2" />
            <enum name="LEFT_BOTTOM" value="3" />
            <enum name="RIGHT_BOTTOM" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FamiliarRecyclerView">
        <attr name="frv_divider" format="reference|color" />
        <attr name="frv_dividerVertical" format="reference|color" />
        <attr name="frv_dividerHorizontal" format="reference|color" />
        <attr name="frv_dividerHeight" format="dimension" />
        <attr name="frv_dividerVerticalHeight" format="dimension" />
        <attr name="frv_dividerHorizontalHeight" format="dimension" />
        <attr name="frv_itemViewBothSidesMargin" format="dimension" />
        <attr name="frv_emptyView" format="reference" />
        <attr name="frv_isEmptyViewKeepShowHeadOrFooter" format="boolean" />
        <attr name="frv_layoutManager" format="enum">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
            <enum name="staggeredGrid" value="2" />
        </attr>
        <attr name="frv_layoutManagerOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="frv_spanCount" format="integer" />
        <attr name="frv_isReverseLayout" format="boolean" />
        <attr name="frv_headerDividersEnabled" format="boolean" />
        <attr name="frv_footerDividersEnabled" format="boolean" />
    </declare-styleable>

    <!--Flow Layout attr-->
    <declare-styleable name="FlowLayout">
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>


    <!--rating bar-->
    <declare-styleable name="ColoredRatingBar">
        <attr name="indicator" format="boolean" />
        <attr name="rating" format="float" />
        <attr name="type" format="enum">
            <enum name="normal" value="0" />
            <enum name="small" value="1" />
        </attr>

        <attr name="coloredRatingBarStyle" format="reference" />
        <!-- Indicator RatingBar style. -->
        <attr name="coloredRatingBarStyleIndicator" format="reference" />
        <!-- Small RatingBar style. -->
        <attr name="coloredRatingBarStyleSmall" format="reference" />
        <!-- Small indicator RatingBar style. -->
        <attr name="coloredRatingBarStyleSmallIndicator" format="reference" />
    </declare-styleable>

    // IconEditText
    <declare-styleable name="IconEditText">
        <attr name="iconSrc" format="reference" />
        <attr name="hint" format="string" />
        <attr name="maxLength" format="integer" />
        <attr name="inputType" format="enum">
            <enum name="number" value="1" />
            <enum name="textEmailAddress" value="2" />
            <enum name="password" value="3" />
            <enum name="text" value="4" />
        </attr>
    </declare-styleable>

</resources>